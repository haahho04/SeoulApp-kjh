<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:orientation="vertical"
                                             app:layout_behavior="@string/appbar_scrolling_view_behavior"
                                             tools:context="com.kjh.seoulapp.TourMainActivity"
                                             tools:layout_editor_absoluteX="0dp"
                                             tools:layout_editor_absoluteY="81dp"
                                             tools:showIn="@layout/app_bar_main"
    >

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp">

            <ImageView
                android:id="@+id/map_full"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                app:srcCompat="@drawable/seoul_map"></ImageView>

            <Button
                android:id="@+id/map_mid_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="95dp"
                android:background="#00ff0000"
                android:onClick="onClick"
                android:visibility="visible" />

            <Button
                android:id="@+id/map_east_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="110dp"
                android:background="#00ff0000"
                android:onClick="onClick"
                android:visibility="visible" />

            <Button
                android:id="@+id/map_west_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="155dp"
                android:background="#00ff0000"
                android:onClick="onClick"
                android:visibility="visible" />

            <Button
                android:id="@+id/map_south_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
