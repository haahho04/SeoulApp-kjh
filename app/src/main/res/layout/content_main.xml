                android:visibility="gone"
                app:srcCompat="@drawable/seoul_west"></ImageView>

            <ImageButton
                android:id="@+id/icon_yangchun"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="75dp"
                android:onClick="onClick"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_nakseong"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/map_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:srcCompat="@drawable/seoul_south"></ImageView>

            <ImageButton
                android:id="@+id/icon_nakjungdae"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="155dp"
                android:onClick="onClick"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_nakseong"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/icon_huninreung"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="165dp"
                android:onClick="onClick"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_nakseong"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/map_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:srcCompat="@drawable/seoul_north"></ImageView>

            <ImageButton
                android:id="@+id/icon_taereung"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="125dp"
                android:onClick="onClick"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_nakseong"
                android:visibility="gone" />

        </FrameLayout>

        <!--스크롤뷰 스크롤 none-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/maintext1"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="서울의 5대궁"
                    android:textColor="@android:color/white"
                    android:textSize="60px"
                    android:background="?attr/colorPrimary"
                    />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_gyeonbok"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:onClick="onClick"
                            android:text="경복궁"
                            android:textColor="@android:color/white"
                            android:layout_marginRight="3dp"
                            android:background="@drawable/btn_gyenbok"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <Button
                            android:id="@+id/btn_changduk"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:onClick="onClick"
                            android:text="창덕궁"
                            android:textColor="@android:color/white"
                            android:layout_marginRight="3dp"
                            android:background="@drawable/btn_changduk"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <Button
                            android:id="@+id/btn_changgyung"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:onClick="onClick"
                            android:text="창경궁"
                            android:textColor="@android:color/white"
                            android:layout_marginRight="3dp"
                            android:background="@drawable/btn_changgyung"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <Button
                            android:id="@+id/btn_gyunghee"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:onClick="onClick"
                            android:text="경희궁"
                            android:textColor="@android:color/white"
                            android:layout_marginRight="3dp"
                            android:background="@drawable/btn_gyunghee"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <Button
                            android:id="@+id/btn_duksu"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:onClick="onClick"
                            android:text="덕수궁"
                            android:textColor="@android:color/white"
                            android:background="@drawable/btn_duksu"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/maintext2"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="서울의 4대문"
                    android:textSize="60px"
                    android:textColor="@android:color/white"
                    android:background="?attr/colorPrimary"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_dongdae"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:onClick="onClick"
                            android:text="흥인지문"
                            android:textColor="@android:color/white"
                            android:layout_marginRight="3dp"
                            android:background="@drawable/btn_dongdae"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <Button
                            android:id="@+id/btn_namdae"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:onClick="onClick"
                            android:text="숭례문"
                            android:textColor="@android:color/white"
                            android:layout_marginRight="3dp"
                            android:background="@drawable/btn_namdae"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <Button
                            android:id="@+id/btn_bukdae"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:onClick="onClick"
                            android:text="숙정문"
                            android:textColor="@android:color/white"
                            android:background="@drawable/btn_bukdae"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/maintext3"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="서울의 왕릉"
                    android:textSize="60px"
                    android:textColor="@android:color/white"
                    android:background="?attr/colorPrimary"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                    </LinearLayout>
                </HorizontalScrollView>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBarMain"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>
