                android:scaleType="fitXY"
                android:visibility="gone"
                app:srcCompat="@drawable/icon_indepen" />

            <ImageButton
                android:id="@+id/icon_changduck"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="215dp"
                android:layout_marginTop="100dp"
                android:background="@android:color/transparent"
                android:onClick="onClick"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:visibility="gone"
                app:srcCompat="@drawable/icon_indepen" />

            <ImageButton
                android:id="@+id/icon_gyunghee"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="125dp"
                android:background="@android:color/transparent"
                android:onClick="onClick"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:visibility="gone"
                app:srcCompat="@drawable/icon_gyeonghui" />

            <ImageButton
                android:id="@+id/icon_ducksu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="205dp"
                android:layout_marginTop="160dp"
                android:background="@android:color/transparent"
                android:onClick="onClick"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:visibility="gone"
                app:srcCompat="@drawable/icon_indepen" />

            <ImageButton
                android:id="@+id/icon_busin"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="130dp"
                android:background="@android:color/transparent"
                android:onClick="onClick"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:visibility="gone"
                app:srcCompat="@drawable/icon_indepen" />

            <ImageButton
                android:id="@+id/icon_dongdaemun"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="165dp"
                android:background="@android:color/transparent"
                android:onClick="onClick"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:visibility="gone"
                app:srcCompat="@drawable/icon_indepen" />

            <ImageButton
                android:id="@+id/icon_namdaemun"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="205dp"
                android:layout_marginTop="190dp"
                android:background="@android:color/transparent"
                android:onClick="onClick"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:visibility="gone"
                app:srcCompat="@drawable/icon_indepen" />

            <ImageButton
                android:id="@+id/icon_bukdaemun"
                android:layout_width="30dp"
