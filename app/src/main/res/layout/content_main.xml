<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:orientation="vertical"
                                             app:layout_behavior="@string/appbar_scrolling_view_behavior"
                                             tools:context="com.kjh.seoulapp.TourMainActivity"
                                             tools:layout_editor_absoluteX="0dp"
                                             tools:layout_editor_absoluteY="81dp"
                                             tools:showIn="@layout/app_bar_main"
    >

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp">

            <ImageView
                android:id="@+id/map_full"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                app:srcCompat="@drawable/seoul_map">
            </ImageView>

            <Button
                android:id="@+id/map_mid_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="95dp"
                android:background="#00ff0000"
                android:onClick="onClick"
                android:visibility="visible"/>

            <Button
                android:id="@+id/map_east_button"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="110dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:visibility="visible"
                android:background="#00ff0000"
                android:onClick="onClick"/>
            <Button
                android:id="@+id/map_west_button"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="155dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:visibility="visible"
                android:background="#00ff0000"
                android:onClick="onClick"/>
            <Button
                android:id="@+id/map_south_button"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="180dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:visibility="visible"
                android:background="#00ff0000"
                android:onClick="onClick"/>
            <Button
                android:id="@+id/map_north_button"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="40dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:visibility="visible"
                android:background="#00ff0000"
                android:onClick="onClick"/>


            <ImageView
                android:id="@+id/map_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:srcCompat="@drawable/seoul_mid">
            </ImageView>

            <ImageButton
                android:id="@+id/icon_indepen"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="150dp"
                android:src="@drawable/icon_indepen_temp"
                android:onClick="onClick"
                android:padding="0dp"
                android:src="@drawable/icon_indepen"
                android:visibility="gone"/>
            <ImageButton
                android:id="@+id/icon_jongmyo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="135dp"
                android:onClick="onClick"
                android:padding="0dp"
                android:src="@drawable/icon_indepen_temp"
                android:visibility="gone" />
            <ImageButton
                android:id="@+id/icon_gyungbok"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="185dp"
                android:layout_marginTop="95dp"
                android:onClick="onClick"
                android:padding="0dp"
                android:src="@drawable/icon_indepen_temp"
                android:visibility="gone" />
            <ImageButton
                android:id="@+id/icon_changgyung"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="245dp"
                android:layout_marginTop="105dp"
                android:onClick="onClick"
                android:padding="0dp"
                android:src="@drawable/icon_indepen_temp"
                android:visibility="gone" />
            <ImageButton
                android:id="@+id/icon_changduck"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="215dp"
                android:layout_marginTop="100dp"
                android:onClick="onClick"
                android:padding="0dp"
                android:src="@drawable/icon_indepen_temp"
                android:visibility="gone" />
            <ImageButton
                android:id="@+id/icon_gyunghee"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="125dp"
                android:onClick="onClick"
                android:padding="0dp"
                android:src="@drawable/icon_indepen_temp"
                android:visibility="gone" />
            <ImageButton
                android:id="@+id/icon_ducksu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="205dp"
                android:layout_marginTop="160dp"
                android:onClick="onClick"
                android:padding="0dp"
                android:src="@drawable/icon_indepen_temp"
                android:visibility="gone" />
            <ImageButton
                android:id="@+id/icon_busin"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="130dp"
                android:onClick="onClick"
                android:padding="0dp"
                android:src="@drawable/icon_indepen_temp"
                android:visibility="gone" />
            <ImageButton
                android:id="@+id/icon_dongdaemun"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="165dp"
                android:onClick="onClick"
                android:padding="0dp"
                android:src="@drawable/icon_indepen_temp"
                android:visibility="gone" />
            <ImageButton
                android:id="@+id/icon_namdaemun"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="205dp"
                android:layout_marginTop="190dp"
                android:onClick="onClick"
                android:padding="0dp"
                android:src="@drawable/icon_indepen_temp"
                android:visibility="gone" />
            <ImageButton
                android:id="@+id/icon_bukdaemun"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="90dp"
                android:onClick="onClick"
                android:padding="0dp"
                android:src="@drawable/icon_indepen_temp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/map_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:srcCompat="@drawable/seoul_east">
            </ImageView>


            <ImageView
                android:id="@+id/map_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:srcCompat="@drawable/seoul_west">
            </ImageView>


            <ImageView
                android:id="@+id/map_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:srcCompat="@drawable/seoul_south">
            </ImageView>
            <ImageButton
                android:id="@+id/icon_nakjungdae"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="155dp"
                android:onClick="onClick"
                android:padding="0dp"
                android:src="@drawable/icon_indepen_temp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/map_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:srcCompat="@drawable/seoul_north">
            </ImageView>

        </FrameLayout>

        <!--스크롤뷰 스크롤 none-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/maintext1"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:text="서울중앙"
                    android:textSize="60px"/>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/btn_next"
                            android:layout_width="1200dp"
                            android:layout_height="wrap_content"
                            android:onClick="onClick"
                            android:text="next"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/maintext2"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:text="서울동부"
                    android:textSize="60px"/>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/btn_test"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/btn_next"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="48dp"
                            android:onClick="onClick"
                            android:text="test"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <Button
                            android:id="@+id/cam_test"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/btn_next"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="48dp"
                            android:layout_weight="1"
                            android:onClick="onClick"
                            android:text="cam_test"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/maintext3"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:text="서울서부"
                    android:textSize="60px"/>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/btn_test2"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/btn_next"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="200dp"
                            android:onClick="onClick"
                            android:text="test2"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                    </LinearLayout>
                </HorizontalScrollView>


                <TextView
                    android:id="@+id/maintext4"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:text="서울남부"
                    android:textSize="60px"/>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/btn_test3"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/btn_next"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="200dp"
                            android:onClick="onClick"
                            android:text="test2"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                    </LinearLayout>
                </HorizontalScrollView>


                <TextView
                    android:id="@+id/maintext5"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:text="서울북부"
                    android:textSize="60px"/>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/btn_test4"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/btn_next"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="200dp"
                            android:onClick="onClick"
                            android:text="test2"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                    </LinearLayout>
                </HorizontalScrollView>



            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBarMain"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>
