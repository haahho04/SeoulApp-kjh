                android:background="#00ff0000"
                android:onClick="onClick"
                android:visibility="visible" />

            <Button
                android:id="@+id/map_north_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="190dp"
